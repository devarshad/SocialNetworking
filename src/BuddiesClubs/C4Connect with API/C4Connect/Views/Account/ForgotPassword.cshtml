@{
    ViewBag.Title = "Forgot password";
}
<div class="col-md-6 border-box">
    <div class="account-title">Find Your Account</div>
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="inputEmail" class="control-label">
                Email, Phone, Username or Full Name
            </label>
            <input type="text" class="form-control input-sm" name="SeachWord" id="SeachWord" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-sm">Search</button> or
            <label><a href="~/Account/Register">Sign up</a></label>
        </div>
    }
</div>
