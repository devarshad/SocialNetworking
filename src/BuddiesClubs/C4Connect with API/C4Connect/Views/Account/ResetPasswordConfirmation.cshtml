@{
    ViewBag.Title = "Reset password confirmation";
}


<div class="col-md-6 border-box">
    <div class="account-title">Reset password confirmation</div>
    @using (Html.BeginForm("RequireEmailConfirmation", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="inputEmail" class="control-label">
                @{
        if (!String.IsNullOrEmpty(ViewBag.Message))
        {
            <p>
                @ViewBag.Message
            </p>
        }
        else
        {<p>
            Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </p>    }
                }
            </label>
        </div>
    }
</div>
