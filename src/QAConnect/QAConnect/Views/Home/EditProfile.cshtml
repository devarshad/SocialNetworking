                        </div>
                    </div>
                    <div id="personal" class="tab-pane fade">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Address:</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter Address" } })
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">City name:</label>
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter City name" } })
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Country name:</label>
                            @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter Country name" } })
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Postal code:</label>
                            @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter Postal Code" } })
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">TimeZone:</label>
                            @Html.EditorFor(model => model.TimeZone, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter TimeZone name" } })
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Privacy name:</label>
                            @Html.EditorFor(model => model.Privacy, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter Privacy name" } })
