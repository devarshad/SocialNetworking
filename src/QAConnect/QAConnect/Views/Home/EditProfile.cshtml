                            @Html.EditorFor(model => model.Language, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter Language('s) name" } })
                        </div>
                    </div>
                </div>

                <label><a class="btn btn-default btn-sm" href="/">Cancel</a></label>
                <button type="submit" class="btn btn-primary btn-sm " data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Processing">Save</button>
            </div>
        }
    </div>
</div>
