<span class="notify-h">Friend Requests</span>
<div data-bind="if:requests().length==0">
    <a class="clearfix">
        <span class="empty-notification">No new friend requests</span>
    </a>
</div>
<div class="dropdown-menu-container" data-bind="foreach: requests,event: { scroll: scrolled(3,event)}">
    <a class="msg-container clearfix">
        <span class="notification-thumb">
            <img data-bind="attr: { src: Avatar }" width="50" height="50" alt="user-thumb">
        </span>
        <span class="notification-intro request">
            <span data-bind="text: Name"></span>
            <span data-bind="text:UserInfo" class="notify-time"> 45 Hours Ago </span>
        </span>
        <span class="notification-action">
            <span>
                <i class="fa fa-user-plus" data-bind="    click: acceptFriendRequest"></i>
            </span>

            <span>
                <i class="fa fa-user-times" data-bind="    click: rejectFriendRequest"></i>
            </span>
        </span>
        @*<strong>Files </strong>*@
    </a>
</div>
<div class="dropdown-menu-container" data-bind="visible: pendingRequest">
    <a class="msg-container clearfix">
        <span class="notification-thumb">
            <i class="fa fa-spinner" style="font-size:20px"></i>
        </span>
    </a>
</div>

<div data-bind="if:requestLast">
    <p>No more records available</p>
</div>
<span class="PopUpfooter viewmore">
    <a href="/FriendRequests">See All friend requests</a>
</span>
